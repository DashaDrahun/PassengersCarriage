@using Lab06.MVC.Carriage.Extensions
@using Lab06.MVC.Carriage.Models
@model HomeIndexViewModel

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="jumbotron" style="background-color:gainsboro">
        <h1 style="font-family: 'Helvetica'; text-align: center">Passengers Carriage</h1>
        <p style="font-family: 'Helvetica'; text-align: center">Here you can look through available routes our company is engaged in</p>
    </div>
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="@Model.Pictures.TakeRandom()" alt=@string.Concat(Model.AllRoutes.FirstOrDefault()?.CityArr, "-->>", Model.AllRoutes.FirstOrDefault()?.CityDepart)>
                <div class="carousel-caption" style="top: 5%; font-family: 'Georgia'; color: snow">
                    <h3>@string.Concat(Model.AllRoutes.FirstOrDefault()?.CityArr, "-->>", Model.AllRoutes.FirstOrDefault()?.CityDepart)</h3>
                    <p></p>
                </div>
            </div>
            @{
                var newModel = Model.AllRoutes.Skip(1);

                foreach (RouteViewModel route in newModel)
                {
                    <div class="carousel-item">
                        <img class="d-block w-100" src="@Model.Pictures.TakeRandom()" alt=@string.Concat(route.CityArr, "-->>", route.CityDepart)>
                        <div class="carousel-caption" style="top: 5%; font-family: 'Georgia'">
                            <h3>@string.Concat(route.CityArr, "-->>", route.CityDepart)</h3>
                            <p></p>
                        </div>
                    </div>
                }
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

</div>

