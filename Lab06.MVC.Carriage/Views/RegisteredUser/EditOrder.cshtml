@model Lab06.MVC.Carriage.Models.OrderViewModel

@{
    ViewBag.Title = "Book ticket";
}

@using (Html.BeginForm("EditOrder", "RegisteredUser"))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4 align="center">Information about ticket</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="container">
            <div class="row">
                <div class="col-6">
                    <dl class="dl-horizontal">
                        <dt style="text-align: center">
                            Info about trip
                            @Html.HiddenFor(x=> x.TripId)
                        </dt>
                        <dt>
                            @Html.DisplayNameFor(model => model.Trip.Route.CityDepart)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Trip.Route.CityDepart)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Trip.Route.CityArr)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Trip.Route.CityArr)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Trip.DepartureTime)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Trip.DepartureTime)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Trip.DepartureDate)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Trip.DepartureDate)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Trip.ArrivalTime)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Trip.ArrivalTime)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Trip.ArrivalDate)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Trip.ArrivalDate)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Trip.Price)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Trip.Price)
                        </dd>
                    </dl>
                </div>
                <div class="col-5">
                    <div class="form-group">
                        @Html.LabelFor(model => model.SeatNumber, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.SeatNumber, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SeatNumber, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <input type="submit" value="Book ticket" class="btn btn-default" />                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                @Html.ActionLink("Back to trips", "Trips", null, new { @class = "btn btn-default" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            </div>
        </div>
}

<div>
</div>

