@model Lab06.MVC.Carriage.Models.OrderViewModel

@{
    ViewBag.Title = "Book ticket";
    Layout = "~/Views/Shared/_RegisteredUsersLayoutPage.cshtml";
}

<style>
    table, th, td {
        border: 1px solid black;
    }
    td {
        width: 30px;
        height: 30px;
        cursor: pointer;
        background-color: azure;
        text-align: center
    }
</style>

@using (Html.BeginForm("EditOrder", "RegisteredUser"))
{
    @Html.AntiForgeryToken()

    <h4 align="center">Information about ticket</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row">
        <div class="col-md-3 offset-3">
            <dl class="dl-horizontal">
                <dt style="text-align: center">
                    Info about trip
                    @Html.HiddenFor(x => x.TripId)
                </dt>
                <dt>
                    @Html.DisplayNameFor(model => model.Trip.Route.CityDepart)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Trip.Route.CityDepart)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Trip.Route.CityArr)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Trip.Route.CityArr)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Trip.DepartureTime)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Trip.DepartureTime)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Trip.DepartureDate)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Trip.DepartureDate)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Trip.ArrivalTime)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Trip.ArrivalTime)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Trip.ArrivalDate)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Trip.ArrivalDate)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Trip.Price)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Trip.Price)
                </dd>
            </dl>
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        @Html.LabelFor(model => model.SeatNumber, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.SeatNumber, htmlAttributes: new { @class = "form-control", @readonly = "true", @id = "seatNumber" })
                            @Html.ValidationMessageFor(model => model.SeatNumber, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        <div class="row">
            <div class="col-md-3">
                <table class="table-bordered" id="seatTable">
                    <tr>
                        <td>1</td>
                        <td>2</td>
                        <td>3</td>
                        <td>4</td>
                        <td>5</td>
                    </tr>
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                </table>
            </div>
        </div>
                <script>
                    $(function() {
                        $("#seatTable td").click(function() {
                            var td = $(this);
                            td.closest('table').find('td').css({ "background-color": "" });
                            td.css({ "background-color": "green" });
                            $("#seatNumber").val(parseInt(this.innerText.trim()) || 0);
                        })
                    })
                </script>

            </div>
    </div>
    <div class="row">
        <div class="col-md-2 offset-3">
            <div class="form-group">
                <input type="button" class="btn btn-default" value="Back to trips!" onclick="location.href='@Url.Action("Trips", "RegisteredUser")'" />
                @*@Html.ActionLink("Back to trips", "Trips", null, new { @type = "button", @class = "btn btn-default" })*@
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group">
                <input type="submit" value="Book ticket" class="btn btn-success" />
            </div>
        </div>
    </div>
}
<div>
</div>

